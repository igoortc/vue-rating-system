// Importing colors
@import "../../assets/colors"

// Home rules
.rating-container
  .v-card
    padding 40px 20px 20px 20px
    margin-top 20px
    
    .rating-image
        border-radius 50px
        object-fit cover

.msg-rating
  font-family 'ProximaNovaSoftMedium'
  color secondaryGray
  font-size 16px
  line-height 20px
  padding 0 30px
  margin-top 27px

  .mentor
    font-family 'ProximaNovaSoftBold'

.comment-rating
  border-radius 4px
  border solid 1px lightGray
  margin 20px 0 28px 0
  text-align left

  p
    &:first-child
      font-family 'ProximaNovaSoftBold'
      font-size 13px
      color #9e9e9e
      padding 24px 0 9px 20px
      text-transform uppercase
      margin 0

  .v-input
    textarea
      color primaryGray !important
      font-size 16px
      line-height 22px
      resize none

  .v-input__slot
    box-shadow none !important
    padding 0 20px !important

@media (min-width: 500px)
  .rating-container
    max-width 640px !important

@media (max-width: 500px)
  .v-btn--large
    .v-btn__content
      white-space normal
      font-size 13px
